<%- include ("header"); -%>

<body>
  <div class="box" id="heading">
    <h1><%= typeOfList %></h1>
  </div>
  <div class="box">
    <% for (newTask of newTasks){%>
    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%=newTask._id%>" onChange="this.form.submit()" />
        <p><%=newTask.name%></p>
      </div>
      <input type="hidden" name="listName" value="<%= typeOfList%>">
    </form>

    </form>
    <% }%>
    <div class="item">
      <form class="item" action="/" method="post">
        <input type="text" name="firstTask" placeholder="New Task" autocomplete="off" />
        <button type="submit" name="button" value="<%=typeOfList%>">+</button>
      </form>
    </div>
  </div>
</body>
<%- include("footer"); -%>